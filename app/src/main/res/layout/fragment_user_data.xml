<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.UserDataFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Inseriamo un frame layout per la modifica dell'immagine del profilo??? -->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Nome:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView10" />

                    <TextView
                        android:text="Nome dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userNameEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Cognome:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:text="Cognome dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userSurnameEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Nickname:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView12" />

                    <TextView
                        android:text="Username dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userUsernameEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Data di Nascita:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView13" />

                    <TextView
                        android:text="Data nascita dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userBirthDateEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:text="Sesso:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView14" />

                    <TextView
                        android:text="Sesso dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userGenderEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:text="Mail:"
                        android:layout_width="match_parent"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView15" />

                    <TextView
                        android:text="Mail dell'utente"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:id="@+id/userMailEditTextView"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:padding="5dp" />
                </TableRow>

            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="gravity">

                <Button
                    android:text="Salva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:layout_gravity="center" />

            </FrameLayout>

        </GridLayout>
    </ScrollView>

</FrameLayout>
