<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Nome:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView10"
                        android:layout_margin="10dp"
                        android:layout_weight="0.4"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/userNameEditText"
                        android:layout_weight="0.6"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:maxLines="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:text="Cognome:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView11"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <EditText
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:id="@+id/userSurnameEditText"
                        android:layout_weight="0.6"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:text="Nickname:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView12"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <EditText
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:id="@+id/userUsernameEditText"
                        android:layout_weight="0.6"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:text="Password:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewPassword"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <EditText
                        android:text=""
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:id="@+id/userPasswordEditText"
                        android:layout_weight="0.6"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:text="Conferma password:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewPasswordConfirm"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <EditText
                        android:text=""
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:id="@+id/userPasswordConfirmEditText"
                        android:layout_weight="0.6"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Data di Nascita:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView13"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:inputType="date"
                        android:id="@+id/userBirthDateTextView"
                        android:layout_weight="0.5"
                        android:gravity="left|fill_vertical"
                        android:padding="0dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:maxLines="1"/>

                    <ImageButton
                        android:src="@drawable/ic_event_black_24dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/changeUserBirthDateButton"
                        android:layout_gravity="center_horizontal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:text="Sesso:"
                        android:layout_width="0dp"
                        android:gravity="right|fill_vertical"
                        android:layout_weight="0.4"
                        android:padding="0dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:id="@+id/textView14"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="?attr/colorControlNormal" />

                    <!--<EditText-->
                        <!--android:text=""-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="45dp"-->
                        <!--android:paddingStart="10dp"-->
                        <!--android:id="@+id/userGenderEditText"-->
                        <!--android:layout_weight="0.6"-->
                        <!--android:gravity="left|fill_vertical"-->
                        <!--android:padding="0dp"-->
                        <!--android:layout_margin="10dp"-->
                        <!--android:textSize="20sp" />-->

                    <RadioGroup
                        android:id="@+id/userGenderRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/userGenderRadioBtnMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maschio"
                            android:checked="true"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/userGenderRadioBtnFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Femmina"
                            android:textSize="20sp"/>
                    </RadioGroup>

                </TableRow>

                <!--<TableRow-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:weightSum="1" >-->

                    <!--<TextView-->
                        <!--android:text="Mail:"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:gravity="right|fill_vertical"-->
                        <!--android:layout_weight="0.4"-->
                        <!--android:padding="0dp"-->
                        <!--android:layout_height="35dp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:id="@+id/textView15"-->
                        <!--android:layout_margin="10dp"-->
                        <!--android:textSize="20sp"-->
                        <!--android:textColor="?attr/colorControlNormal" />-->

                    <!--<EditText-->
                        <!--android:text=""-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="45dp"-->
                        <!--android:paddingStart="10dp"-->
                        <!--android:id="@+id/userMailEditText"-->
                        <!--android:layout_weight="0.6"-->
                        <!--android:gravity="left|fill_vertical"-->
                        <!--android:padding="0dp"-->
                        <!--android:layout_margin="10dp"-->
                        <!--android:textSize="20sp" />-->
                <!--</TableRow>-->

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity">

                <Button
                    android:text="Salva"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:id="@+id/buttonSendUserData"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <Button
                    android:text="Upload"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:id="@+id/buttonUploadUserImg"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/imageViewUserData"
                    android:layout_weight="1" />
            </LinearLayout>

        </GridLayout>

    </ScrollView>

</FrameLayout>
