<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matte.mypet_testlogin.ReminderDataFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:text="Evento:"
                android:layout_width="0dp"
                android:gravity="right|fill_vertical"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/textView10"
                android:layout_margin="10dp"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:id="@+id/reminderEventEditText"
                android:layout_weight="0.6"
                android:gravity="left|fill_vertical"
                android:paddingStart="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:maxLines="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="Data:"
                android:layout_width="0dp"
                android:gravity="right|fill_vertical"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/textView11"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/reminderDateTextView"
                android:layout_weight="0.6"
                android:gravity="left|fill_vertical"
                android:layout_margin="10dp"
                android:textSize="20sp" />

            <ImageButton
                android:src="@drawable/ic_event_black_24dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/changeReminderDateButton"
                android:layout_gravity="center_horizontal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="Ora:"
                android:layout_width="0dp"
                android:gravity="right|fill_vertical"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/textViewTime"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/reminderTimeTextView"
                android:layout_weight="0.6"
                android:gravity="left|fill_vertical"
                android:layout_margin="10dp"
                android:textSize="20sp" />

            <ImageButton
                android:src="@drawable/ic_event_black_24dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/changeReminderTimeButton"
                android:layout_gravity="center_horizontal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:text="Luogo:"
                android:layout_width="0dp"
                android:gravity="right|fill_vertical"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/textViewReminderPlace"
                android:layout_margin="10dp"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:id="@+id/reminderPlaceEditText"
                android:layout_weight="0.6"
                android:gravity="left|fill_vertical"
                android:paddingStart="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:maxLines="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="Animale:"
                android:layout_width="0dp"
                android:gravity="right|fill_vertical"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/textView12"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:id="@+id/reminderDataAnimalSpin"
                android:layout_weight="0.6"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:paddingStart="10dp"/>

        </TableRow>

        <TableRow android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity">

                <Button
                    android:text="Salva"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:id="@+id/buttonSendReminderData"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>
